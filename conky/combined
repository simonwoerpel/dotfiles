alignment top_right
background yes
border_width 0
cpu_avg_samples 2
default_color 839496
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont Meslo LG S DZ for Powerline:size=8
gap_x 5
gap_y 5
minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window no
own_window_class Conky
own_window_type desktop
stippled_borders 0
update_interval 2
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
# double_buffer yes
text_buffer_size 1024

# solarized colors
color1 b58900  # yellow
color2 cb4b16  # orange
color3 dc322f  # red
color4 d33682  # magenta
color5 6c71c4  # violet
color6 268bd2  # blue
color7 2aa198  # cyan
color8 859900  # green

TEXT
$color3${hr 2}
$sysname $kernel on $machine
${hr 2}
${color7}Uptime:$color $uptime
${color7}Frequency:$color $freq Mhz / $acpitemp C
${color7}RAM Usage:$color $mem/$memmax - $memperc% ${membar 4}
${color7}CPU Usage:$color $cpu% ${cpubar 4}
${color7}Processes:$color $processes ${color7}Running:$color $running_processes
$hr
${color7}File systems:
/ $color${fs_used /}/${fs_size /} ${fs_bar 6 /}
# ${if_mounted /dev/sdb1}${color7}USB: $color${fs_used /dev/sdb1}/${fs_size /dev/sdb1} ${fs_bar 6 /dev/sdb1}$endif
${color7}Networking:
Up:$color ${upspeed wlan0}${color7}- Down:$color ${downspeed wlan0}
${color7}Up:$color ${upspeed eth0}${color7}- Down:$color ${downspeed eth0}
# ${color7}IP:$color ${execi 7200 ~/.conky/scripts/publicip.sh}
$hr
${color7}Name              PID   CPU%   MEM%
$color ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
$color ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
$color ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
$color ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
${hr 2}
# $color1${hr 2}
# ${execpi 3600 cal -h}
# ${execpi 10 ~/.local/bin/khal agenda}
# ${hr 2}
