alignment top_left
background yes
border_width 0
cpu_avg_samples 2
default_color 839496
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont Meslo LG S DZ for Powerline:size=8
gap_x 5
gap_y 5
minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window no
own_window_class Conky
own_window_type desktop
stippled_borders 0
update_interval 2
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
# double_buffer yes
text_buffer_size 1024

# solarized colors
color1 b58900  # yellow
color2 cb4b16  # orange
color3 dc322f  # red
color4 d33682  # magenta
color5 6c71c4  # violet
color6 268bd2  # blue
color7 2aa198  # cyan
color8 859900  # green

TEXT
$color1${hr 2}
${execpi 3600 cal -h}
$hr
${execpi 10 ~/.local/bin/khal agenda}
${hr 2}
