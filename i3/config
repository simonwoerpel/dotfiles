# exit mode
# http://www.getreu.net/public/downloads/i3-extensions.html#_source_code_2
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (d) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id sh ~/.i3/i3lock.sh, mode "default"
    bindsym e exec sh -c '[ $(echo "NO\nYES" | dmenu -fn "Meslo LG S DZ for Powerline:size=8" -nb "#859900" -sb "#cb4b16"  -nf "#002b36" -i -p "Really exit i3 X session?") = "YES" ] && i3-msg exit', mode "default"
    # bindsym e exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the exit shortcut. All unsaved data will be lost.' -b 'Yes, exit i3' 'i3-msg exit'", mode "default"
    bindsym s exec --no-startup-id sh ~/.i3/i3lock.sh, mode default; exec --no-startup-id /bin/systemctl suspend, mode "default"
    bindsym h exec --no-startup-id sh ~/.i3/i3lock.sh, mode default; exec --no-startup-id /bin/systemctl hibernate, mode "default"
    bindsym r exec sh -c '[ $(echo "NO\nYES" | dmenu -fn "Meslo LG S DZ for Powerline:size=8" -nb "#859900" -sb "#cb4b16"  -nf "#002b36" -i -p "Really reboot?") = "YES" ] && /bin/systemctl reboot', mode "default"
    # bindsym r exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the reboot shortcut. All unsaved data will be lost.' -b 'Yes, reboot' '/bin/systemctl reboot'", mode "default"
    bindsym d exec sh -c '[ $(echo "NO\nYES" | dmenu -fn "Meslo LG S DZ for Powerline:size=8" -nb "#859900" -sb "#cb4b16"  -nf "#002b36" -i -p "Really power off?") = "YES" ] && /bin/systemctl poweroff', mode "default"
    # bindsym d exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the shutdown shortcut. All unsaved data will be lost.' -b 'Yes, shutdown' '/bin/systemctl poweroff'", mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+x mode "$mode_system"

# xrandr mode
set $mode_xrandr Xrandr (b) büro, (s) solo, (h) home
mode "$mode_xrandr" {
    bindsym b exec --no-startup-id xrandr --output VGA1 --mode 1280x1024 --left-of LVDS1 --output LVDS1 --mode 1280x800, mode "default"
    bindsym s exec --no-startup-id xrandr --output VGA1 --off --output LVDS1 --mode 1280x800 --rate 60.18, mode "default"
    bindsym h exec --no-startup-id xrandr --output DVI-I-2 --mode 1920x1080 --rate 60.00 --output DVI-I-1 --mode 1920x1080 --rate 60.00 --right-of DVI-I-2, mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+s mode "$mode_xrandr"

