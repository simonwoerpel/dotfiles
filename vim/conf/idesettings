" settings for different filetypes
augroup vimrc_autocmds
    autocmd!
    "highlight characters past column 119
    autocmd FileType python highlight Excess ctermbg=DarkGrey guibg=Black
    autocmd FileType python match Excess /\%119v.*/
    autocmd FileType python set nowrap
    autocmd FileType python set sw=4
    autocmd FileType python set ts=4
    autocmd FileType python set sts=4
    autocmd FileType javascript,json,jsx,html,jinja set sw=2
    autocmd FileType javascript,json,jsx,html,jinja set ts=2
    autocmd FileType javascript,json,jsx,html,jinja set sts=2
    augroup END

" https://github.com/tell-k/vim-autopep8
let g:autopep8_max_line_length=119

" remove trailing ws
" https://stackoverflow.com/questions/356126/how-can-you-automatically-remove-trailing-whitespace-in-vim
autocmd BufWritePre * :%s/\s\+$//e

" jsx
let g:jsx_ext_required = 0 " Allow JSX in normal JS files

" jsx riot.js "
au BufNewFile,BufRead *.tag setlocal ft=javascript

" R terminal
let vimrplugin_term = "uxterm"
